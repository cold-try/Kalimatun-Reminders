<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/arab_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_letter"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/lettre2"
                android:contentDescription="Arabic letter"
                android:scaleType="centerCrop"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/previewLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_letter"
                android:layout_toRightOf="@+id/image_letter"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:textStyle="italic"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>