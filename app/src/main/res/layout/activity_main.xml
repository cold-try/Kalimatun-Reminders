<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/mn_bar"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/linear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title">

        <Button
            android:id="@+id/arabic_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0.8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/arabic_option"
            android:textColor="@color/mn_bar"/>

        <Button
            android:id="@+id/french_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/french_option"
            android:textColor="@color/mn_bar"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_button"
        android:text="@string/footer"
        android:textStyle="italic"
        android:textColor="@color/white"/>

</RelativeLayout>