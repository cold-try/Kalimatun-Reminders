<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginTop="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_arab_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/kalimatun_arab"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                tools:text="كلمة"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:src="@drawable/arrow"
                android:layout_toRightOf="@+id/kalimatun_arab"
                android:layout_toEndOf="@+id/kalimatun_arab"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />

            <TextView
                android:id="@+id/trad_fr"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                tools:text="Mot"
                android:textSize="25sp"
                android:layout_toRightOf="@id/arrow_icon"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/arrow_icon" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>